# Environment Variables Configuration
# Copy this file to .env.local for development or configure these variables in your production environment

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Environment - determines behavior of the application
# Values: development, production, test
NODE_ENV=development

# Base URL of your application
# Used for absolute URLs, redirects, and API calls
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Site metadata
NEXT_PUBLIC_SITE_NAME="Fintech Portfolio"
NEXT_PUBLIC_SITE_DESCRIPTION="Professional fintech portfolio and services"

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Better Auth Configuration
# Generate a secure random string for JWT signing: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secure-jwt-secret-key-here

# Trusted origins for CORS and authentication redirects
# Comma-separated list of allowed origins
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session configuration
# Session expiry time in seconds (default: 7 days = 604800)
BETTER_AUTH_SESSION_EXPIRES_IN=604800

# Cookie configuration
BETTER_AUTH_COOKIE_SECURE=false
BETTER_AUTH_COOKIE_SAME_SITE=lax

# Rate limiting configuration
BETTER_AUTH_RATE_LIMIT_ENABLED=true
BETTER_AUTH_RATE_LIMIT_WINDOW=60
BETTER_AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API rate limiting
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# API versioning
NEXT_PUBLIC_API_VERSION=v1

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

